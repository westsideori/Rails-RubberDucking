<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
        <% end %>
<% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :mod %><br>
    <%= f.number_field :mod, in: 1..5 %><br>
    <%= f.submit %>
<% end %>