<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
        <% end %>
<% end %>

<%= form_for @duck do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.label 'Student' %><br>
    <%= f.collection_select :student_id, @students, :id, :name %><br>
    <%= f.submit %>
<% end %>
